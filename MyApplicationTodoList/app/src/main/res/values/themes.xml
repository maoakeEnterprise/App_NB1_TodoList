<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplicationTodoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ToggleButtonGraph</item>
    </style>

    <style name="DefaultButtonValidate">

        <item name="android:startColor">@color/transppink</item>
        <item name="android:endColor">@color/transpblue</item>

    </style>

    <style name="ToggleButtonGraph" parent="android:style/Widget.Button">
        <item name="android:colorBackground">@color/grey1</item>

    </style>

    <!--Composate Create default title -->

    <style name="DefaultTextTitlePageStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultTextTicketsStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DefaultTextDayMonthYearsStyle">
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextDescriptionStyle">
        <item name="android:textColor">@color/transpgrey_param</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="DefaultTextTicketMenuStyle" parent="DefaultTextTicketsStyle">
        <item name="android:textSize">60sp</item>
    </style>
    <style name="DefaultTextDescribMenuStyle" parent="DefaultTextTicketsStyle">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="DefaultTextDescribaddStyle" parent="DefaultTextTicketsStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultTextTicketsNameaddStyle" parent="DefaultTextTicketsStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DefaultTextTicketsGraphTypeStyle" parent="DefaultTextTitlePageStyle">
        <item name="android:color">@color/white</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
        <item
            name="android:background">@android:color/transparent
        </item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

</resources>