<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    app:cardElevation="0dp"


    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_shape_tickets">

        <RadioButton
            android:id="@+id/radioButtonValidationTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        </RadioButton>

        <TextView
            android:id="@+id/textViewTaskItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="40dp"
            android:text="@string/Item_Tickets_text"
            style="@style/DefaultTextTicketsStyle"
            />

        <TextView
            android:id="@+id/textViewDescriptionItem"
            style="@style/DefaultTextDescriptionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/Item_Description_text" />
    </FrameLayout>



</androidx.cardview.widget.CardView>